<%= form_with(model: @item, local: true) do |form| %> 
    <div>
        <%= form.label :name %> <br>
        <%= form.text_field :name %> 
    </div>
    <div>
        <%= form.label :price %> <br>
        <%= form.number_field :price %> 
    </div>
    <div>
        <%= form.label :description %> <br>
        <%= form.text_area :description %> 
    </div>
    <div>
        <%= form.label :delivery_fee %> <br>
        <%= form.number_field :delivery_fee %> 
    </div>
    <div>
        <%= form.submit %> 
    </div>
<% end %> 