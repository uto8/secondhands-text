<%= form_with(model: @item, local: true) do |form| %> 
    <div>
        <%= form.label :商品名 %> <br>
        <%= form.text_field :name %> 
    </div>
    <div>
        <%= form.label :販売価格 %> <br>
        <%= form.number_field :price %> 
    </div>
    <div>
        <%= form.label :商品の説明 %> <br>
        <%= form.text_area :description %> 
    </div>
    <div>
        <%= form.label :配送料 %> <br>
        <%= form.number_field :delivery_fee %> 
    </div>
    <div>
        <%= form.submit :出品する, class: "btn btn-primary" %> 
    </div>
<% end %> 